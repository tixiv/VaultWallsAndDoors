  <!--========================= Walls =============================-->
  
  <ThingDef ParentName="BuildingBase">
    <defName>VaultWall</defName>
    <label>Vault Wall</label>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <description>A nearly indestructible vault wall.</description>
    <graphicData>
      <texPath>Things/Building/Vault</texPath>
      <graphicClass>Graphic_Appearances</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Vault/WallSmooth_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>1000000</MaxHitPoints>
      <WorkToBuild>7500</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <DevilstrandCloth>10</DevilstrandCloth>
    </costList>
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.25</multiplier>
      </li>
      <li>
        <damageDef>Mining</damageDef>
        <multiplier>0.25</multiplier>
      </li>
      <li>
        <damageDef>Bullet</damageDef>
        <multiplier>.2</multiplier>
      </li>
      <li>
        <damageDef>Arrow</damageDef>
        <multiplier>.1</multiplier>
      </li>
      <li>
        <damageDef>Flame</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li>
        <damageDef>Frostbite</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li>
        <damageDef>Cut</damageDef>
        <multiplier>.1</multiplier>
      </li>
      <li>
        <damageDef>Scratch</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li>
        <damageDef>Stab</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li>
        <damageDef>Bite</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li>
        <damageDef>ToxicBite</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li>
        <damageDef>Blunt</damageDef>
        <multiplier>0</multiplier>
      </li>
    </damageMultipliers>
    <designationHotKey>Misc3</designationHotKey>
    <researchPrerequisites>
        <li>VaultWallsAndDoors</li>
    </researchPrerequisites>
  </ThingDef>
  
